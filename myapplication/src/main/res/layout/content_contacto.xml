<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.Contacto"
    tools:showIn="@layout/activity_contacto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.button.MaterialButton
            android:id="@+id/Llamar"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Mensaje"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="2dp"
            android:insetLeft="@dimen/activity_horizontal_margin"
            android:insetRight="@dimen/activity_horizontal_margin"
            android:minWidth="200dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="14dp"
            android:text="Llamar"
            app:backgroundTint="@color/Gris"
            app:icon="@drawable/ic_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.design.button.MaterialButton
            android:id="@+id/E-Mail"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:layout_below="@+id/Llamar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="372dp"
            android:insetLeft="@dimen/activity_horizontal_margin"
            android:insetRight="@dimen/activity_horizontal_margin"
            android:minWidth="200dp"
            android:text="Enviar e-mail"
            app:backgroundTint="@color/Gris"
            app:icon="@drawable/ic_mail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.design.button.MaterialButton
            android:id="@+id/Mensaje"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:layout_alignStart="@+id/E-Mail"
            android:layout_alignTop="@+id/E-Mail"
            android:layout_marginStart="0dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="444dp"
            android:insetLeft="@dimen/activity_horizontal_margin"
            android:insetRight="@dimen/activity_horizontal_margin"
            android:minWidth="200dp"
            android:text="Consulta WhatsApp"
            app:backgroundTint="@color/Gris"
            app:icon="@drawable/ic_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.028"
            app:layout_constraintStart_toStartOf="parent" />
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_nav_view"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/nav_botton_menu"></android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>